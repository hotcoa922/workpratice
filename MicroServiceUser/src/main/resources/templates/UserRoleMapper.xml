<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.microserviceuser.mapper.UserRolesMapper">

    <!-- 조회 -->
    <select id="findAllUserRoles" resultType="com.example.microserviceuser.domain.UserRoles">
        SELECT * FROM UserRoles
    </select>

    <select id="findUserRoleById" parameterType="long" resultType="com.example.microserviceuser.domain.UserRoles">
        SELECT * FROM UserRoles WHERE id = #{id}
    </select>

    <!-- 생성 -->
    <insert id="insertUserRole" parameterType="com.example.microserviceuser.domain.UserRoles">
        INSERT INTO UserRoles (userId, roleId, createdDate, updatedDate)
        VALUES (#{userId}, #{roleId}, NOW(), NOW())
    </insert>

    <!-- 수정 -->
    <update id="updateUserRole" parameterType="com.example.microserviceuser.domain.UserRoles">
        UPDATE UserRoles
        SET userId = #{userId}, roleId = #{roleId}, updatedDate = NOW()
        WHERE id = #{id}
    </update>

    <!-- 삭제 -->
    <delete id="deleteUserRole" parameterType="long">
        DELETE FROM UserRoles WHERE id = #{id}
    </delete>
</mapper>
